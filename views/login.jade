extends layout

block title
  title AberOWL: Login
  meta(name='title', content='AberOWL login')
  meta(name='description', content='Login to Aber-OWL ontology repository')
  link(rel="icon" href="http://aber-owl.net/favicon.png")
  link(rel='stylesheet', href='/css/base.css')
  link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
  link(rel='stylesheet', href='/css/style.css')

block content
  .container-fluid
    .jumbotron
      -if(messages.error) 
        div.alert.alert-danger(role='alert')
          span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
          span &nbsp; Error: #{messages.error}
      form.form-signin(action='/login', method='post', role='form')
        h2.form-signin-heading Log In
        input.form-control(name='username', type='username', placeholder='Username', required='', autofocus='')
        input.form-control(name='password', type='password', placeholder='Password', required='')
        br
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
  +footer
