extends layout

block title
  title AberOWL: Framework for ontology-based data access in biology

block content
  .container-fluid
  -if(messages)
      p #{messages.errors}
    .jumbotron
        p(align='center')
          span Welcome to the AberOWL framework for ontology-based data access.
        p(align='center')
          span Currently hosting #{stats.oCount} ontologies, with #{stats.cCount} classes and #{stats.aCount} axioms.
        div
          center
            div.input-group
              input#search.form-control(placeholder='Enter a Search Query', type='text', autofocus='autofocus')
              span.input-group-btn
                button#sbutton.btn.btn-default(onclick='doSearch();') Query
            a#sparql.btn.btn.btn-default(href='#' style='display:none') Use in SPARQL
            a#pubmed.btn.btn.btn-default(href='#' style='display:none') Search PubMed
            br

        div#tabs(style='display:none;')
          ul
            li
              a(id='ctabhead' href='#overview') Classes
            li
              a(id='otabhead' href='#ontology') Ontologies
            li
              a(id='mtabhead' href='#mowl') DL Query

          div#overview
            table#main_search.table.table-striped.table-bordered.table-condensed
              thead
                tr
                  th OWL Class
                  th Ontology
                  th Label
                  th Definition

          div#ontology
            table#ontology_search.table.table-striped.table-bordered.table-condensed
              thead
                tr
                  th ID
                  th Name
                  th Description

          div#mowl
            input(name='type', type='radio', value='supeq', onclick='doSearch()')
            label Super- and Equivalent classes
            input(name='type', type='radio', value='supclass', onclick='doSearch()')
            label Superclasses
            input(name='type', type='radio', value='equivalent' checked='true', onclick='doSearch()')
            label Equivalent classes
            input(name='type', type='radio', value='subclass', onclick='doSearch()')
            label Subclasses
            input(name='type', type='radio', value='subeq', onclick='doSearch()')
            label Sub- and Equivalent classes

            table#manchester_search.table.table-striped.table-bordered.table-condensed
              thead
                tr
                  th OWL Class
                  th Ontology
                  th Label
                  th Definition
