extends layout

block title
  title AberOWL: Help pages
  meta(name='title', content='AberOWL help pages')
  meta(name='description', content='AberOWL API documentation and help pages')
  link(rel='stylesheet', href='/css/base.css')
  link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
  link(rel='stylesheet', href='/css/style.css')

block append scripts
  script(src='/js/jquery-2.1.3.min.js')

block content
  .container-fluid
    .starter-template

      h1 AberOWL Statistics
      h2.sub-header The statistics of the ontologies saved in AberOWL
      .table-responsive
        table.table.table-striped
          tbody
            tr
              td Number of the axioms.
              td #{stats.aCount}
            tr
              td Number of the classest.
              td #{stats.cCount}
            tr
              td Number of the ontologies.
              td #{stats.oCount}
            tr
              td Number of the labels
              td #{stats.lCount}
            tr
              td Number of the definitions
              td #{stats.dCount}
            tr
              td Number of the unsuccessful imports. 
              td #{stats.noFileError}
            tr
              td Number of the unsuccessful imports.
              td #{stats.importError}
            tr
              td Number of the unsuccessful parsers.
              td #{stats.parseError}
            tr
              td Number of the others erros caused during ontology loading.
              td #{stats.otherError}
