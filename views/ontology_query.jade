extends layout

block content
  .container-fluid
    .row
      .col-sm-3.col-md-2.sidebar
        ul.nav.nav-sidebar
          li
            a(href='/ontology/#{ontology.id}') Overview
          li.active
            a(href='#') Query
          li
            a(href='#') Browse
          li
            a(href='#') Visualise
          li
            a(href='/ontology/#{ontology.id}/downloads') Download
          -if(user && (user.admin || (user.owns && user.owns.contains(ontology.id))))
            li
              a(href='/ontology/#{ontology.id}/manage') Manage
     .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
        h1.page-header #{ontology.id} - #{ontology.name}
        h4.sub-header #{ontology.description}
        h2.sub-header Query
        center
          input#autocomplete(style='width:100%', placeholder='Enter Manchester OWL Syntax Query')
          a#button.btn.btn.btn-success(onclick='query=document.getElementById(\'autocomplete\').value;redrawTable();') Query

        table#example.table.table-striped
          thead
            tr
              th OWL Class
              th Ontology
              th Label
              th Definition
        div#ontology(style="display:none") #{ontology.id}
        
